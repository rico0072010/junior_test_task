<% provide(:title, 'Login') %>
<div class="container">
  <h1 class="text-center mt4 mb-4"><%= t('.sign_in') %></h1>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "shadow p-3 mb-3 bg-info rounded" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: 'text-white' %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'shadow rounded form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'text-white' %>
          <%= f.password_field :password, autocomplete: 'current-password', class: 'shadow rounded form-control' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'text-white form-check-label' do %>
              <%= resource.class.human_attribute_name('remember_me') %>
            <% end %>
          </div>
        <% end %>
        <div class="form-group row justify-content-center">
          <%= f.submit  t('.sign_in'), class: 'btn btn-outline-light' %>
        </div>
      <% end %>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
