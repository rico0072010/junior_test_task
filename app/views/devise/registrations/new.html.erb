<% provide(:title, 'Sign up') %>
<div class="container">
  <h1 class="text-center mt4 mb-4">Sign up</h1>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= render 'shared/errors', object: @user %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "shadow p-3 mb-3 bg-info rounded" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: 'text-white' %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'shadow rounded form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :username, class: 'text-white' %>
          <%= f.text_field :username, class: 'shadow rounded form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'text-white' %>
          <%= f.password_field :password, autocomplete: 'current-password', class: 'shadow rounded form-control' %>
          <% if @minimum_password_length %>
            <small class="form-text text-light-gray"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: 'text-white' %>
          <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'shadow rounded form-control' %>
        </div>
        <div class="form-group">
          <div class="row justify-content-center">
            <%= f.label :avatar, class: 'control-label text-white col-3' %>
            <%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png', onchange: "readURL(this);", class: "input-group col-9 px-5 border-0 text-white" %>
          </div>
        </div>
        <!-- Uploaded image area-->
        <div class="image-area mx-auto col-6 mt-4 mb-4"><img id="imageResult" src="#" alt="" class="img-fluid rounded shadow-sm mx-auto d-block"></div>
        <div class="form-group row justify-content-center">
          <%= f.submit t('.sign_up'), class: 'btn btn-outline-light' %>
        </div>
      <% end %>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('#user_avatar').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
