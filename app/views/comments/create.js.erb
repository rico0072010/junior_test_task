var comments_list = $('#comments-list');
$('#comments-list').html('<%= escape_javascript(render partial: @advert.comments.limit(25)) %>');
$('#comments-counter').html('This advert has <%= escape_javascript(pluralize(@advert.comments.count, 'comment')) %>')
$('#comment-form').html('<%= escape_javascript(render('comments/form')) %>');
<% if @advert.comments.count > 25 %>
  $('#comment-section').append('<%= escape_javascript(render partial: 'comments/see_all') %>');
<% end %>
