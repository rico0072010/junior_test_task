<div class="container">
  <h1 class="text-center mt4 mb-4">Create a new tag</h1>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= render 'shared/errors', object: @tag %>
      <%= form_for(@tag, html: { class: "shadow p-3 mb-3 bg-info rounded" }) do |f| %>
        <div class="form-group">
          <%= f.label :name, 'Tag name', class: 'text-white' %>
          <%= f.text_field :name, autofocus: true, placeholder: 'Enter a name', class: 'shadow rounded form-control' %>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: 'btn btn-outline-light' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to '[ Cancel and go back to tags page ]', tags_path, class: 'row justify-content-center text-info' %>
